{
  "name": "typescript-service-template",
  "version": "0.1.0",
  "description": "An opinionated template for spinning up typescript services.",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "build": "tsc",
    "build:watch": "tsc -w",
    "generate": "graphql-codegen",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix .",
    "migrate": "typeorm migration:run",
    "start:ci": "node dist/server/server.js",
    "start:dev": "concurrently \"yarn build:watch\" \"nodemon dist/server/server.js\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jelkand/typescript-service-template.git"
  },
  "author": "Jack Anderson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jelkand/typescript-service-template/issues"
  },
  "homepage": "https://github.com/jelkand/typescript-service-template#readme",
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/bunyan": "^1.8.6",
    "@types/node": "^14.14.35",
    "@types/validator": "^10.11.2",
    "apollo-server": "^2.21.1",
    "apollo-server-plugin-base": "^0.10.4",
    "apollo-server-types": "^0.6.3",
    "bunyan": "^1.8.15",
    "graphql": "^15.5.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2"
  }
}
